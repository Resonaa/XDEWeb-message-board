{
  "name": "xdeweb-message-board",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix dev -c \"node server.mjs\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "migrate": "npx prisma migrate dev",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "cross-env NODE_ENV=production npx pm2 start server.mjs --name xde",
    "typecheck": "tsc -b",
    "postinstall": "patch-package",
    "format": "prettier --write . && npm run lint -- --fix"
  },
  "eslintIgnore": [
    "/build",
    "/node_modules",
    "/public/build",
    "**/*.js"
  ],
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-prisma"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "latest",
    "@chakra-ui/react": "latest",
    "@emotion/cache": "latest",
    "@emotion/react": "latest",
    "@emotion/styled": "latest",
    "@fastify/compress": "latest",
    "@fastify/early-hints": "latest",
    "@fastify/one-line-logger": "latest",
    "@mcansh/remix-fastify": "latest",
    "@prisma/client": "latest",
    "@remix-run/node": "latest",
    "@remix-run/react": "latest",
    "chakra-ui-markdown-renderer": "latest",
    "cross-env": "latest",
    "dayjs": "latest",
    "fastify": "latest",
    "framer-motion": "latest",
    "highlight.js": "latest",
    "i18next": "latest",
    "i18next-browser-languagedetector": "latest",
    "i18next-chained-backend": "latest",
    "i18next-fs-backend": "latest",
    "i18next-http-backend": "latest",
    "i18next-localstorage-backend": "latest",
    "isbot": "latest",
    "nprogress": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-i18next": "latest",
    "react-icons": "latest",
    "react-markdown": "latest",
    "react-textarea-autosize": "latest",
    "rehype-highlight": "latest",
    "remark-gfm": "latest",
    "remix-i18next": "latest",
    "typescript": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "@remix-run/dev": "latest",
    "@remix-run/eslint-config": "latest",
    "@remix-run/serve": "latest",
    "@types/eslint": "latest",
    "@types/katex": "latest",
    "@types/node": "latest",
    "@types/nprogress": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-chakra-ui": "latest",
    "patch-package": "latest",
    "pm2": "latest",
    "prettier": "latest",
    "prettier-plugin-prisma": "latest",
    "prisma": "latest",
    "ts-node": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  },
  "optionalDependencies": {
    "bufferutil": "latest",
    "utf-8-validate": "latest"
  }
}
